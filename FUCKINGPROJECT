#include <stdio.h>
#include <stdlib.h>
#include <time.h>

void line()
{
	printf("==========================\n");
}

void menu()
{
	line();
	printf("%%%%%% 신나는 야구 게임 %%%%%%\n");
	printf("1: 야구공 선택\n");
	printf("2: 플레이\n");
	printf("3: 종료\n");
	line();
}

void menu1()
{
	line();
	printf("야구공을 선택합니다.\n");
	printf("(A~Z사이의 문자 10개를 입력해 주세요)\n");
	printf("(0: 자동 선택)\n");
	line();
}

void menu2()
{
	line();
	printf("컴퓨터가 야구공을 3개 선택했습니다.\n");
	printf("컴퓨터가 선택한 야구공을 9번안에 맞춰주세요\n");
	printf("사용하는 야구공: ");
}

int main()
{
	int i, j, k, cnt, strike, ball;
	int way=1, n = 10, tries = 9;
	char Bball[10] = { 0 };
	char pitch[3];
	char bat[3];
	srand((unsigned)time(NULL));

	while (1)
	{
		if (way==1||way==2||way==3)
			menu();
		printf("메뉴를 선택하세요: ");

		scanf("%d", &way);
		if (way == 1)
		{
				menu1();
				for (i = 0; i < n; i++)
				{
					printf("문자를 한개씩 입력해주세요.(%d개남음): ", (n - i));
					scanf(" %c", &Bball[i]);

					for (j =0;j < i;j++)
					{
						if ((Bball[i] == Bball[j]) && Bball[i] != 0)
						{
							printf("\"%c\"는 이미 선택된 야구공입니다.\n",Bball[i]);
							i--;
						}
					}

					if (Bball[i] >= 'A' && Bball[i] <= 'Z') {
						continue;
					}
					else if (Bball[i] == '0')
					{
						for (i; i < n; i++)
						{
							Bball[i] = rand() % ('Z' - 'A'+1) + 'A';
							for (j = 0;j < i;j++)
							{
								if ((Bball[i] == Bball[j]))
									i--;
							}
						}
					}
					else
					{
						printf("\"%c\"는 올바른 야구공이 아닙니다.\n", Bball[i]);
						i--;
						continue;
					}
				}
				printf("모든 야구공이 선택되었습니다: ");
				printf("%c", Bball[0]);
				for (i = 1;i < n;i++)
				{
					printf(",");
					printf("%c", Bball[i]);
				}
				printf("\n");
		}

		else if (way == 2)
		{
			strike = 0;
			ball = 0;
			if (Bball[1] == 0)
			{
				printf("먼저 야구공을 선택해 주세요.\n");
				way = NULL;
			}
			else
			{
				for (i = 0;i < 3;i++)
				{
					pitch[i] = Bball[rand() % 10];
					for (j = 0;j < i;j++)
					{
						if (pitch[i] == pitch[j])
						{
							i--;
						}
					}
				}
				
				for (i = 0;i <3;i++)
					printf("%c", pitch[i]);
				printf("\n");

				menu2();
				printf("%c", Bball[0]);
				for (i = 1;i < n;i++)
				{
					printf(",");
					printf("%c", Bball[i]);
				}
				printf("\n");
				line();

				for (i = 0;i < tries;i++)
				{
					cnt = 0;
					printf("문자를 세 개 입력해 주세요 (%d회 남음): ", (tries-i));
					for (j = 0;j < 3;j++)
					{
						scanf(" %c", &bat[j]);
						for (k = 0;k < n;k++)
						{
							if (bat[j] == Bball[k])
								cnt++;
						}
					}
					if (cnt != 3)
					{
						printf("잘못된 입력입니다.\n");
						continue;
					}

					for (j = 0;j < 3;j++)
					{
						for(k=0;k<3;k++)
						{
							if (bat[j] == pitch[k])
							{
								if (j == k)
									strike++;
								else
									ball++;
							}
						}
					}

					if (strike == 3)
					{
						printf("축하합니다! 승리하였습니다.\n");
						break;
					}
					else
					{
						if ((tries - i) == 1)
							printf("더 이상 기회가 없습니다. 패배하였습니다.\n");
						else
						{
							if (strike == 0 && ball == 0)
								printf("아웃\n");
							else
							{
								printf("%d 스트라이크 %d 볼\n", strike, ball);
								strike = 0;
								ball = 0;
							}
						}
					}
					
				}
			}
		}

		else if (way == 3)
		{
			printf("게임을 종료합니다.\n");
			break;
		}
		else
		{
			printf("\"%d\"은 없는 메뉴입니다.\n", way);
			continue;
		}

	}

	return 0;
}
